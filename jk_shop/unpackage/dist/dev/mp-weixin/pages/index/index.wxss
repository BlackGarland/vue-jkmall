.home swiper {
  height: 380rpx;
}
.home swiper image {
  width: 750rpx;
  height: 380rpx;
}
.home .uni-grid {
  text-align: center;
}
.home .uni-grid .uni-grid-item .iconfont {
  background: pink;
  line-height: 120rpx;
  width: 120rpx;
  height: 120rpx;
  -webkit-border-radius: 90px;
          border-radius: 90px;
  margin: 10px auto;
  font-size: 25px;
}
.home .hot_goods {
  background: #eee;
}
.home .hot_goods .tit {
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
  margin-top: 20px;
  margin-bottom: 3px;
  color: blue;
  height: 50px;
  line-height: 50px;
  text-align: center;
  letter-spacing: 20px;
  background: #fff;
}
.home .hot_goods .goods_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 15rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  overflow: hidden;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.home .hot_goods .goods_list .goods_item {
  width: 355rpx;
  margin-bottom: 15rpx;
  background: #fff;
  padding: 10px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.home .hot_goods .goods_list .goods_item image {
  height: 150px;
  width: 100%;
  mix-width: 160px;
  margin: 10px auto;
}
.home .hot_goods .goods_list .goods_item .price {
  font-size: 18px;
  color: red;
  padding: 8px 0;
}
.home .hot_goods .goods_list .goods_item .price text:nth-child(2) {
  color: #ccc;
  text-decoration: line-through;
  margin-left: 10px;
  font-size: 13px;
}
.home .hot_goods .goods_list .goods_item .name {
  font-size: 14px;
}

